<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="comprehensure.DASHBOARD.MainDashboard">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Padding="20,60,20,60">

            <FlexLayout Wrap="Wrap" 
                        JustifyContent="SpaceEvenly" 
                        AlignContent="Center" 
                        AlignItems="Center">

                <Border Margin="25"
                        StrokeShape="RoundRectangle 30" 
                        BackgroundColor="#CDB4DB" 
                        HeightRequest="340" 
                        WidthRequest="340"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="8,8" Radius="15" Opacity="0.15" />
                    </Border.Shadow>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="25">
                        <ImageButton Source="placeholder.png" HeightRequest="140" WidthRequest="140" Clicked="ProgressButton_Clicked" />
                        <Label Text="PROGRESS" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" 
                               FontSize="28" 
                               TextColor="#2D2D2D"
                               />
                    </VerticalStackLayout>
                </Border>

                <Border Margin="25"
                        StrokeShape="RoundRectangle 30" 
                        BackgroundColor="#FFC8DD" 
                        HeightRequest="340" 
                        WidthRequest="340"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="8,8" Radius="15" Opacity="0.15" />
                    </Border.Shadow>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="25">
                        <ImageButton Source="book.png" HeightRequest="140" WidthRequest="140" Clicked="ModulesButton_Clicked"/>
                        <Label Text="MODULES" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" 
                               FontSize="28" 
                               TextColor="#2D2D2D"/>
                    </VerticalStackLayout>
                </Border>

                <Border Margin="25"
                        StrokeShape="RoundRectangle 30" 
                        BackgroundColor="#BDE0FE" 
                        HeightRequest="340" 
                        WidthRequest="340"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="8,8" Radius="15" Opacity="0.15" />
                    </Border.Shadow>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="25">
                        <ImageButton Source="user.png" HeightRequest="140" WidthRequest="140" Clicked="ProfileButton_Clicked" />
                        <Label Text="PROFILE" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" 
                               FontSize="28" 
                               TextColor="#2D2D2D"/>
                    </VerticalStackLayout>
                </Border>

                <Border Margin="25"
                        StrokeShape="RoundRectangle 30" 
                        BackgroundColor="#A2D2FF" 
                        HeightRequest="340" 
                        WidthRequest="340"
                        StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="8,8" Radius="15" Opacity="0.15" />
                    </Border.Shadow>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="25">
                        <ImageButton Source="exclamation_mark.png" HeightRequest="140" WidthRequest="140" Clicked="AboutUsButton_Clicked" />
                        <Label Text="ABOUT US" 
                               HorizontalOptions="Center" 
                               FontAttributes="Bold" 
                               FontSize="28" 
                               TextColor="#2D2D2D"/>
                    </VerticalStackLayout>
                </Border>

            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>