<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="comprehensure.DASHBOARD.MainDashboard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#f0e7ff">
    <ScrollView>
        <Grid>

            <FlexLayout
                AlignContent="Center"
                AlignItems="Center"
                Direction="Row"
                HorizontalOptions="Center"
                JustifyContent="Center"
                VerticalOptions="Center"
                Wrap="Wrap">

                <Border
                    Margin="15"
                    BackgroundColor="#CDB4DB"
                    HeightRequest="340"
                    StrokeThickness="0"
                    WidthRequest="340">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow
                            Brush="#7a5dc0"
                            Opacity="0.25"
                            Radius="20"
                            Offset="0,8" />
                    </Border.Shadow>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="15"
                        VerticalOptions="Center">
                        <Border
                            Padding="20"
                            BackgroundColor="#ffffffcc"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="50" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow
                                    Brush="#000000"
                                    Opacity="0.2"
                                    Radius="10"
                                    Offset="0,4" />
                            </Border.Shadow>
                            <ImageButton
                                Aspect="AspectFit"
                                BackgroundColor="Transparent"
                                Clicked="ProgressButton_Clicked"
                                HeightRequest="140"
                                Source="placeholder.png"
                                WidthRequest="140" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            HorizontalOptions="Center"
                            Text="PROGRESS"
                            TextColor="#3a3a3a" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Margin="15"
                    BackgroundColor="#FFC8DD"
                    HeightRequest="340"
                    StrokeThickness="0"
                    WidthRequest="340">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow
                            Brush="#e97a8b"
                            Opacity="0.25"
                            Radius="20"
                            Offset="0,8" />
                    </Border.Shadow>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="15"
                        VerticalOptions="Center">
                        <Border
                            Padding="20"
                            BackgroundColor="#ffffffcc"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="50" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow
                                    Brush="#000000"
                                    Opacity="0.2"
                                    Radius="10"
                                    Offset="0,4" />
                            </Border.Shadow>
                            <ImageButton
                                Aspect="AspectFit"
                                BackgroundColor="Transparent"
                                Clicked="ModulesButton_Clicked"
                                HeightRequest="140"
                                Source="book.png"
                                WidthRequest="140" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            HorizontalOptions="Center"
                            Text="MODULES"
                            TextColor="#3a3a3a" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Margin="15"
                    BackgroundColor="#BDE0FE"
                    HeightRequest="340"
                    StrokeThickness="0"
                    WidthRequest="340">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow
                            Brush="#5f8de0"
                            Opacity="0.25"
                            Radius="20"
                            Offset="0,8" />
                    </Border.Shadow>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="15"
                        VerticalOptions="Center">
                        <Border
                            Padding="20"
                            BackgroundColor="#ffffffcc"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="50" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow
                                    Brush="#000000"
                                    Opacity="0.2"
                                    Radius="10"
                                    Offset="0,4" />
                            </Border.Shadow>
                            <ImageButton
                                Aspect="AspectFit"
                                BackgroundColor="Transparent"
                                Clicked="ProfileButton_Clicked"
                                HeightRequest="140"
                                Source="user.png"
                                WidthRequest="140" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            HorizontalOptions="Center"
                            Text="PROFILE"
                            TextColor="#3a3a3a" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Margin="15"
                    BackgroundColor="#A2D2FF"
                    HeightRequest="340"
                    StrokeThickness="0"
                    WidthRequest="340">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow
                            Brush="#3b79e0"
                            Opacity="0.25"
                            Radius="20"
                            Offset="0,8" />
                    </Border.Shadow>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="15"
                        VerticalOptions="Center">
                        <Border
                            Padding="20"
                            BackgroundColor="#ffffffcc"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="50" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow
                                    Brush="#000000"
                                    Opacity="0.2"
                                    Radius="10"
                                    Offset="0,4" />
                            </Border.Shadow>
                            <ImageButton
                                Aspect="AspectFit"
                                BackgroundColor="Transparent"
                                Clicked="AboutUsButton_Clicked"
                                HeightRequest="140"
                                Source="exclamation_mark.png"
                                WidthRequest="140" />
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            HorizontalOptions="Center"
                            Text="ABOUT US"
                            TextColor="#3a3a3a" />
                    </VerticalStackLayout>
                </Border>

            </FlexLayout>
        </Grid>
    </ScrollView>
</ContentPage>

