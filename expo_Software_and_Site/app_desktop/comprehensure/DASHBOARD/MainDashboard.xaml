<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="comprehensure.DASHBOARD.MainDashboard"
             BackgroundColor="#f0e7ff">

    <Grid>

        <FlexLayout Direction="Row"
                    Wrap="Wrap"
                    JustifyContent="Center"
                    AlignItems="Center"
                    AlignContent="Center"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">

            <Border WidthRequest="340"
                    HeightRequest="340"
                    StrokeThickness="0"
                    BackgroundColor="#CDB4DB"
                    Margin="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#7a5dc0"
                            Offset="0,8"
                            Radius="20"
                            Opacity="0.25"/>
                </Border.Shadow>
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="15">
                    <Border BackgroundColor="#ffffffcc"
                            Padding="20"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,4"
                                    Radius="10"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <ImageButton Source="placeholder.png"
                                     HeightRequest="140"
                                     WidthRequest="140"
                                     Clicked="ProgressButton_Clicked"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"/>
                    </Border>
                    <Label Text="PROGRESS"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="28"
                           TextColor="#3a3a3a"/>
                </VerticalStackLayout>
            </Border>

            <Border WidthRequest="340"
                    HeightRequest="340"
                    StrokeThickness="0"
                    BackgroundColor="#FFC8DD"
                    Margin="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#e97a8b"
                            Offset="0,8"
                            Radius="20"
                            Opacity="0.25"/>
                </Border.Shadow>
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="15">
                    <Border BackgroundColor="#ffffffcc"
                            Padding="20"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,4"
                                    Radius="10"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <ImageButton Source="book.png"
                                     HeightRequest="140"
                                     WidthRequest="140"
                                     Clicked="ModulesButton_Clicked"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"/>
                    </Border>
                    <Label Text="MODULES"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="28"
                           TextColor="#3a3a3a"/>
                </VerticalStackLayout>
            </Border>

            <Border WidthRequest="340"
                    HeightRequest="340"
                    StrokeThickness="0"
                    BackgroundColor="#BDE0FE"
                    Margin="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#5f8de0"
                            Offset="0,8"
                            Radius="20"
                            Opacity="0.25"/>
                </Border.Shadow>
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="15">
                    <Border BackgroundColor="#ffffffcc"
                            Padding="20"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,4"
                                    Radius="10"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <ImageButton Source="user.png"
                                     HeightRequest="140"
                                     WidthRequest="140"
                                     Clicked="ProfileButton_Clicked"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"/>
                    </Border>
                    <Label Text="PROFILE"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="28"
                           TextColor="#3a3a3a"/>
                </VerticalStackLayout>
            </Border>

            <Border WidthRequest="340"
                    HeightRequest="340"
                    StrokeThickness="0"
                    BackgroundColor="#A2D2FF"
                    Margin="15">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#3b79e0"
                            Offset="0,8"
                            Radius="20"
                            Opacity="0.25"/>
                </Border.Shadow>
                <VerticalStackLayout VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="15">
                    <Border BackgroundColor="#ffffffcc"
                            Padding="20"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="50"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#000000"
                                    Offset="0,4"
                                    Radius="10"
                                    Opacity="0.2"/>
                        </Border.Shadow>
                        <ImageButton Source="exclamation_mark.png"
                                     HeightRequest="140"
                                     WidthRequest="140"
                                     Clicked="AboutUsButton_Clicked"
                                     BackgroundColor="Transparent"
                                     Aspect="AspectFit"/>
                    </Border>
                    <Label Text="ABOUT US"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="28"
                           TextColor="#3a3a3a"/>
                </VerticalStackLayout>
            </Border>

        </FlexLayout>
    </Grid>
</ContentPage>