<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="comprehensure.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Image
                Source="logo_edited.jpg"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="200">
                
            </Image>
                

            <Button
                Text="Login"
                x:Name="Button_login"
                Clicked="Button_login_Clicked"
                Margin="20">
                
            </Button>
            <Button
            Text="Sign up"
            x:Name="Button_signup"
                Margin="20"
                Clicked="Button_sign_up_Clicked">

            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
