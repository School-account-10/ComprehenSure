<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="comprehensure.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout>
            <Image
                HeightRequest="200"
                HorizontalOptions="Center"
                Source="logo_edited.jpg"
                WidthRequest="200" />


            <Button
                x:Name="Button_login"
                Margin="20"
                Clicked="Button_login_Clicked"
                Text="Login" />
            <Button
                x:Name="Button_signup"
                Margin="20"
                Clicked="Button_sign_up_Clicked"
                Text="Sign up" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
